#include<stdio.h>
int Add(int x , int y )
{
	int z = 0 ;
	z = x + y ;
	return z;
}
int main(){
while(1){
	int a = 0 ;
		int b = 0;
		int sum= 0 ;
		printf("输入两个数字：\n") ;
		scanf ("%d %d", &a , &b );
		sum = Add(a , b);
	    printf("%d\n", sum );
	printf("按q中止，其它继续:\n ");
	char input ;
	scanf ("%c" , &input);
	if(input == 'q' ||input == 'Q'){
		break;
		}
}
return 0 ; 
} 
